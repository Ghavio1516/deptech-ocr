# .env.example
# Copy this file to .env and update the paths

# ==========================================
# PROJECT CONFIGURATION
# ==========================================
PROJECT_NAME=deptech-ocr
PROJECT_BASE_PATH=/path/to/your/deptech-ocr

# ==========================================
# DOCKER VOLUME MAPPINGS
# ==========================================
# These paths will be auto-generated from PROJECT_BASE_PATH
APP_PATH=${PROJECT_BASE_PATH}/app
UPLOADS_PATH=${PROJECT_BASE_PATH}/uploads
LOGS_PATH=${PROJECT_BASE_PATH}/logs
REQUIREMENTS_PATH=${PROJECT_BASE_PATH}/requirements.txt

# ==========================================
# CONTAINER MAPPINGS (DON'T CHANGE)
# ==========================================
CONTAINER_APP_PATH=/code/app
CONTAINER_UPLOADS_PATH=/uploads
CONTAINER_LOGS_PATH=/logs
CONTAINER_REQUIREMENTS_PATH=/code/requirements.txt

# ==========================================
# API CONFIGURATION
# ==========================================
API_PORT=2005
API_HOST=0.0.0.0

# ==========================================
# OCR DEFAULT CONFIGURATION
# ==========================================
# Language Options: en, ch, id (id will be mapped to ch)
DEFAULT_LANGUAGE=ch

# Quality Options: fast, balanced, high
DEFAULT_QUALITY=high

# Extraction Mode Options: direct, ocr, hybrid
DEFAULT_EXTRACTION_MODE=hybrid

# Data Cleansing: true, false
ENABLE_CLEANSING=true

# ==========================================
# OCR PERFORMANCE SETTINGS
# ==========================================
# OCR confidence threshold (0.0-1.0)
OCR_CONFIDENCE_THRESHOLD=0.5

# Maximum image size for processing (MB)
MAX_IMAGE_SIZE_MB=50

# GPU acceleration: true, false
ENABLE_GPU=false

# ==========================================
# ENVIRONMENT SETTINGS
# ==========================================
# Environment: development, staging, production
ENV=development

# Timezone
TZ=Asia/Jakarta

# ==========================================
# HEALTH CHECK CONFIGURATION
# ==========================================
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# ==========================================
# SETUP INSTRUCTIONS
# ==========================================
# 1. Copy this file: cp .env.example .env
# 2. Update PROJECT_BASE_PATH to your actual path
# 3. Adjust other settings as needed
# 4. Run: docker-compose up -d --build
